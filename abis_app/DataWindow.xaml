<Window x:Class="abis_app.DataWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:abis_app"
        mc:Ignorable="d"
        Title="DataWindow" Height="450" Width="800" Background="#C5B79A">

    <StackPanel>
        <DataGrid x:Name="Book_Table" AutoGenerateColumns="True" ItemsSource="{Binding}" SelectionChanged="Book_Table_SelectionChanged" Height="27">
        </DataGrid>
        <Button x:Name="Add_Book_Button" Content="Добавить книгу" Width="300" Height="25" Click="Add_Book_Button_Click" Foreground="#FF263C7E" FontFamily="Bell MT" FontSize="14" FontWeight="Bold" FontStyle="Italic" BorderThickness="3,3,3,3" BorderBrush="#FF263C7E" Margin="0,0,0,30"/>
    </StackPanel>
</Window>
