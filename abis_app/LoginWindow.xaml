<Window x:Class="abis_app.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:abis_app"
        mc:Ignorable="d"
        Title="LoginWindow" Height="300" Width="300">
    <Window.Background>
        <ImageBrush ImageSource="bg.jpg" Stretch="UniformToFill"></ImageBrush>
    </Window.Background>
    <Grid>
        <StackPanel>
            <TextBlock>Имя пользователя</TextBlock>
            <TextBox Name = "Username_Textbox" MaxLength="20" TextWrapping="Wrap"  Width="200" Height="25" Style="{StaticResource InputTextBox_Style}"/>
            <TextBlock>Пароль</TextBlock>
            <PasswordBox Name = "Password_Passwordbox" MaxLength="8" Width="200" Height="25"/>
            <Button Name="Login_Button" Width="200" Height="25" Style="{StaticResource MainWindowButton_Style}" Click="Login_Button_Click">Войти</Button>
            <Button Name="Guest_Login_Button" Width="200" Height="25" Style="{StaticResource MainWindowButton_Style}" Click="Guest_Login_Button_Click">Войти как гость</Button>
        </StackPanel>
    </Grid>
</Window>
