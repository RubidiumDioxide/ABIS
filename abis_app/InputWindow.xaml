<Window x:Class="abis_app.InputWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:abis_app"
        mc:Ignorable="d"
        Title="InputWindow" Height="450" Width="800" Background="BlanchedAlmond">
    <StackPanel>
        <TextBox MaxLength="13" TextChanged="ISBN_TextBox_TextChanged" TextWrapping="Wrap">ISBN</TextBox>
        <TextBox MaxLength="100" TextChanged="Title_TextBox_TextChanged" TextWrapping="Wrap">Название книги</TextBox>
        <TextBox MaxLength="100" TextChanged="Pages_TextBox_TextChanged" TextWrapping="Wrap">Кол-во страниц</TextBox>
        <TextBox MaxLength="100" TextChanged="PublishingHouse_TextBox_TextChanged" TextWrapping="Wrap">Название издательства</TextBox>
        <TextBox MaxLength="4" TextChanged="YearPublished_TextBox_TextChanged" TextWrapping="Wrap">Год</TextBox>
        <TextBox MaxLength="200" TextChanged="Description_TextBox_TextChanged" TextWrapping="Wrap">Краткое Описание</TextBox>
        <TextBox MaxLength="100" TextChanged="Quantity_TextBox_TextChanged" TextWrapping="Wrap">Кол-во копий</TextBox>

        <Button x:Name="Input_Button" Content="Ввод" Width="80" Height="25" Background="CadetBlue" Click="Input_Button_Click"/>
    </StackPanel>
</Window>
