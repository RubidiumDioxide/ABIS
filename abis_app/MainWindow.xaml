<Window x:Class="abis_app.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:abis_app"
        mc:Ignorable="d"
        Title="ABIS" Height="180" Width="400" ResizeMode="NoResize">
    <Window.Background>
        <LinearGradientBrush EndPoint="0.5, 1" StartPoint="0.5, 0">
            <GradientStop Color="#1C3B5F" Offset="0"/>
            <GradientStop Color="AliceBlue" Offset="1"/>
        </LinearGradientBrush>
    </Window.Background>

    <Window.Resources>
    </Window.Resources>

    <StackPanel>
        <Button x:Name="Book_Button" Content="Книги" Click="Book_Button_Click" Style="{StaticResource MainWindowButton_Style}"/>
        <Button x:Name="Reader_Button" Content="Читатели" Click="Reader_Button_Click" Style="{StaticResource MainWindowButton_Style}"/>
        <Button x:Name="BookReader_Button" Content="Формуляры" Click="BookReader_Button_Click" Style="{StaticResource MainWindowButton_Style}"/>
        <Button x:Name="Reports_Button" Content="Отчеты" Click="Reports_Button_Click" Style="{StaticResource MainWindowButton_Style}"/>
    </StackPanel>
</Window>
